<div class="register-container">
  <div class="register-form">
    <h2>update-account</h2>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
                <%  }) %>
            </ul>
            <% } %>

    <form id="registerForm" action="/account/update-account" method="POST">
      <label for="account_firstname">First Name</label>
      <input type="text" id="account_firstname" name="account_firstname" placeholder="Enter your name" required value="<%= locals.accountData.account_firstname %>">

      <label for="account_lastname">Last Name</label>
      <input type="text" id="account_lastname" name="account_lastname" placeholder="Enter your last name" required value="<%= locals.accountData.account_lastname %>">

      <label for="account_email">Email Address</label>
      <input type="email" id="account_email" name="account_email" placeholder="Enter your email address" required value="<%= locals.accountData.account_email %>">
      <button type="submit" class="register-button">Update Account</button>
      <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    </form>
    <br>
    <form id="registerForm" action="/account/update-account-password" method="POST">
      <label for="account_password">Password</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character<br>This action will change the current password</span> 
      <input type="password" id="account_password" name="account_password" placeholder="Enter your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
             title="Password must be at least 12 characters long, contain at least one uppercase letter, one lowercase letter, one digit, and one special character. No spaces allowed.">

      <div class="password-toggle">
        <button type="button" id="passwordbtn">Show Password</button>
      </div>

      <button type="submit" class="register-button">Update Password</button>
      <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    </form>

    <p class="login-link">
      Already have an account?
      <a href="/account/login">Login here</a>
    </p>
  </div>
</div>
